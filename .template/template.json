{
  "vars": [
    "NAME",
    "OTHERNAME",
    "PACKAGES",
    "PKGIMPORT",
    "PKGINCLUDE",
    "CODEEXAMPLE",
    "PKGLINK",
    "LINKER",
    "VERSION",
    "AUTHOR"
  ],
  "inputs": {
    "include": {
      "display": "Libraries To Include",
      "type": "MultiSelect",
      "options": ["tui", "curl", "cli", "logging"],
      "default": []
    },

    "linking": {
      "display": "Linking Method",
      "type": "Select",
      "options": ["Static", "Dynamic"],
      "default": "Dynamic"
    },

    "author": {
      "display": "Author Name",
      "type": "String",
      "default": ""
    },

    "version": {
      "display": "Version",
      "type": "String",
      "default": ""
    },

    "derive": {
      "PACKAGES": {
        "from": "include",
        "map": {
          "tui": "\"ftxui\"",
          "curl": "\"curlcpp\", \"nlohmann-json\"",
          "cli": "\"cli11\"",
          "logging": "\"fmt\", \"spdlog\""
        },
        "join": ", "
      },

      "PKGIMPORT": {
        "from": "include",
        "map": {
          "tui": "find_package(ftxui CONFIG REQUIRED)",
          "curl": "find_package(nlohmann_json CONFIG REQUIRED)\nfind_package(curlcpp CONFIG REQUIRED)",
          "cli": "find_package(CLI11 CONFIG REQUIRED)",
          "logging": "find_package(fmt CONFIG REQUIRED)\nfind_package(spdlog CONFIG REQUIRED)"
        },
        "join": "\n"
      },

      "PKGLINK": {
        "from": "include",
        "map": {
          "tui": "ftxui::screen ftxui::dom ftxui::component",
          "curl": "nlohmann_json::nlohmann_json curlcpp::curlcpp",
          "cli": "CLI11::CLI11",
          "logging": "fmt::fmt spdlog::spdlog"
        },
        "join": " "
      },

      "CODEEXAMPLE": {
        "from": "include",
        "map": {
          "tui": "    // Example code for FTXUI\n    auto screen = ftxui::ScreenInteractive::TerminalOutput();\n    auto element = ftxui::text(\"Hello, FTXUI!\");\n    screen.Loop(element);",
          "curl": "    // Example code for curlcpp\n    curlcpp::CurlEasy easy;\n    easy.setOpt<CURLOPT_URL>(\"https://www.example.com\");\n    easy.perform();",
          "cli": "    // Example code for CLI11\n    CLI::App app{\"My App\"};\n    std::string name;\n    app.add_option(\"-n,--name\", name, \"Your name\");\n    CLI11_PARSE(app, argc, argv);",
          "logging": "    // Example code for spdlog and fmt\n    spdlog::info(\"Hello, {}!\", \"spdlog\");\n    fmt::print(\"This is a formatted string: {}\\n\", 42);"
        },
        "join": "\n\n"
      },

      "PKGINCLUDE": {
        "from": "include",
        "map": {
          "tui": "#include <ftxui/screen/screen.hpp>\n#include <ftxui/dom/elements.hpp>\n#include <ftxui/component/component.hpp>",
          "curl": "#include <curlcpp/curl_easy.h>\n#include <curlcpp/curl_multi.h>",
          "cli": "#include <CLI/CLI.hpp>",
          "logging": "#include <fmt/format.h>\n#include <spdlog/spdlog.h>"
        },
        "join": "\n"
      },

      "LINKER": {
        "from": "linking",
        "map": {
          "Static": "OFF",
          "Dynamic": "ON"
        }
      },

      "AUTHOR": {
        "from": "author"
      },

      "VERSION": {
        "from": "version",
        "regex": {
          "code": "[^a-zA-Z0-9\\.]+",
          "replaceWith": "_"
        }
      }
    }
  },
  "filesToExclude": [],
  "postCreateCommands": [
    "rm -rf .template",
    "rm -rf .git",
    "git init",
    "git add .",
    "git commit -m \"Initial commit from template\""
  ],
  "postCreateNotes": "Your C++ console application template has been created successfully!\n\nTo get started:\n1. Navigate to your project directory: `cd @NAME@`\n2. Run: make run\n\nHappy coding!"
}
