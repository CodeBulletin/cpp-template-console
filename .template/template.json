{
  "vars": [
    "NAME",
    "OTHERNAME",
    "PACKAGES",
    "PKGIMPORT",
    "PKGINCLUDE",
    "CODEEXAMPLE",
    "PKGLINK",
    "LINKER",
    "VERSION",
    "AUTHOR"
  ],
  "inputs": {
    "include": {
      "display": "Libraries To Include",
      "type": "MultiSelect",
      "options": ["ftxui", "curlcpp", "nlohmann_json", "cli11", "spdlog", "fmt", "sqlite3"],
      "default": []
    },

    "linking": {
      "display": "Linking Method",
      "type": "Select",
      "options": ["Static", "Dynamic"],
      "default": "Dynamic"
    },

    "author": {
      "display": "Author Name",
      "type": "String",
      "default": ""
    },

    "version": {
      "display": "Version",
      "type": "String",
      "default": ""
    },

    "derive": {
      "PACKAGES": {
        "from": "include",
        "map": {
          "ftxui": "\"ftxui\"",
          "curlcpp": "\"curlcpp\"",
          "nlohmann_json": "\"nlohmann-json\"",
          "cli11": "\"cli11\"",
          "spdlog": "\"spdlog\"",
          "fmt": "\"fmt\"",
          "sqlite3": "\"sqlite3\""
        },
        "join": ", "
      },

      "PKGIMPORT": {
        "from": "include",
        "map": {
          "ftxui": "find_package(ftxui CONFIG REQUIRED)",
          "curlcpp": "find_package(curlcpp CONFIG REQUIRED)",
          "nlohmann_json": "find_package(nlohmann_json CONFIG REQUIRED)",
          "cli11": "find_package(CLI11 CONFIG REQUIRED)",
          "spdlog": "find_package(spdlog CONFIG REQUIRED)",
          "fmt": "find_package(fmt CONFIG REQUIRED)",
          "sqlite3": "find_package(SQLite3 CONFIG REQUIRED)"
        },
        "join": "\n"
      },

      "PKGLINK": {
        "from": "include",
        "map": {
          "ftxui": "ftxui::screen ftxui::dom ftxui::component",
          "curlcpp": "curlcpp::curlcpp",
          "nlohmann_json": "nlohmann_json::nlohmann_json",
          "cli11": "CLI11::CLI11",
          "spdlog": "spdlog::spdlog",
          "fmt": "fmt::fmt",
          "sqlite3": "SQLite::SQLite3"
        },
        "join": " "
      },

      "CODEEXAMPLE": {
        "from": "include",
        "map": {
          "ftxui": "    // Example code for ftxui\n    auto screen = ftxui::ScreenInteractive::TerminalOutput();\n\n    auto app = ftxui::Renderer([] {\n        return ftxui::text(\"Hello, FTXUI!\");\n    });\n\n    screen.PostEvent(ftxui::Event::Escape);\n    screen.Loop(app);",
          "curlcpp": "    auto easy = curl::curl_easy();\n\n    easy.add<CURLOPT_URL>(\"https://www.example.com\");\n    easy.add<CURLOPT_FOLLOWLOCATION>(1L);\n\n    easy.perform();",
          "cli11": "    // Example code for CLI11\n    CLI::App cli{\"My App\"};\n    std::string name;\n    cli.add_option(\"-n,--name\", name, \"Your name\");\n    CLI11_PARSE(cli, argc, argv);",
          "spdlog": "    // Example code for spdlog\n    spdlog::info(\"Hello, {}!\", \"spdlog\");\n",
          "nlohmann_json": "    // Example code for nlohmann_json\n    nlohmann::json j;\n    j[\"name\"] = \"John Doe\";\n    j[\"age\"] = 30;\n    std::cout << j.dump(4) << std::endl;",
          "fmt": "    // Example code for fmt\n    fmt::print(\"Hello, {}! The answer is {}.\\n\", \"fmt\", 42);",
          "sqlite3": "    // Example code for SQLiteCpp\n    SQLite::Database db(\"example.db\", SQLite::OPEN_READWRITE | SQLite::OPEN_CREATE);\n    SQLite::Statement query(db, \"CREATE TABLE IF NOT EXISTS test (id INTEGER PRIMARY KEY, value TEXT);\");\n    query.exec();"
        },
        "join": "\n\n"
      },

      "PKGINCLUDE": {
        "from": "include",
        "map": {
          "ftxui": "#include <ftxui/component/component.hpp>\n#include <ftxui/component/screen_interactive.hpp>",
          "curlcpp": "#include <curlcpp/curl_easy.h>\n#include <sstream>",
          "nlohmann_json": "#include <nlohmann/json.hpp>",
          "cli11": "#include <CLI/CLI.hpp>",
          "spdlog": "#include <spdlog/spdlog.h>",
          "fmt": "#include <fmt/core.h>",
          "sqlite3": "#include <SQLiteCpp/SQLiteCpp.h>"
        },
        "join": "\n"
      },

      "LINKER": {
        "from": "linking",
        "map": {
          "Static": "OFF",
          "Dynamic": "ON"
        }
      },

      "AUTHOR": {
        "from": "author"
      },

      "VERSION": {
        "from": "version",
        "regex": {
          "code": "[^a-zA-Z0-9\\.]+",
          "replaceWith": "_"
        }
      }
    }
  },
  "filesToExclude": [],
  "postCreateCommands": [
    "rm -rf .template",
    "rm -rf .git",
    "git init",
    "git add .",
    "git commit -m \"Initial commit from template\""
  ],
  "postCreateNotes": "Your C++ console application template has been created successfully!"
}
